{
    "rules": [
        {
            "name": "Splunk App Structure",
            "patterns": [
                "default/**",
                "local/**",
                "metadata/**",
                "appserver/**",
                "bin/**",
                "docs/**",
                "extras/**",
                "static/**"
            ]
        },
        {
            "name": "Web Interface Files",
            "patterns": [
                "appserver/static/**/*.css",
                "appserver/static/**/*.js",
                "appserver/static/**/*.html"
            ]
        },
        {
            "name": "Configuration Files",
            "patterns": [
                "default/*.conf",
                "local/*.conf",
                "metadata/local.meta"
            ]
        },
        {
            "name": "Python Scripts",
            "patterns": [
                "bin/*.py"
            ]
        },
        {
            "name": "Views and Dashboards",
            "patterns": [
                "default/data/ui/views/*.xml",
                "default/data/ui/nav/*.xml"
            ]
        },
        {
            "name": "Service Monitoring",
            "patterns": [
                "var/log/splunk/splunkd.log",
                "var/log/splunk/web_service.log",
                "var/log/splunk/python.log",
                "var/log/splunk/metrics.log"
            ]
        },
        {
            "name": "Browser Console Logs",
            "patterns": [
                "appserver/static/js/build/*.js.map",
                "appserver/static/js/debug/*.log"
            ]
        },
        {
            "name": "Documentation",
            "patterns": [
                "README.md",
                "docs/**/*.md"
            ]
        }
    ],
    "ignore": [
        "*.pyc",
        "__pycache__",
        ".DS_Store",
        "local/",
        "metadata/local.meta"
    ],
    "required_checks": [
        {
            "name": "Service Health Check",
            "steps": [
                "Restart Splunk Mac process",
                "Check Splunkd service status",
                "Monitor splunkd.log for startup errors",
                "Verify web_service.log for UI errors",
                "Check python.log for script errors",
                "Monitor app-specific logs in real-time",
                "Verify browser console for JavaScript errors"
            ]
        },
        {
            "name": "Error Resolution",
            "steps": [
                "Parse error logs immediately upon detection",
                "Apply fixes in real-time",
                "Verify fix by restarting affected service",
                "Document resolution in app logs"
            ]
        },
        {
            "name": "Documentation Verification",
            "steps": [
                "Check Splunk official documentation for latest best practices",
                "Verify compatibility with current Splunk version",
                "Review Antigravity saved documentation for implementation details",
                "Update local documentation with any changes",
                "Cross-reference features with Splunk Enterprise docs",
                "Validate API references against Splunk REST API docs",
                "Document any deviations from standard practices"
            ]
        },
        {
            "name": "Documentation Maintenance",
            "steps": [
                "Keep README.md up to date with latest changes",
                "Maintain changelog for version updates",
                "Update API documentation for custom endpoints",
                "Maintain user guide with latest features",
                "Update troubleshooting guide with new solutions",
                "Version control all documentation changes"
            ]
        },
        {
            "name": "Splunk Documentation References",
            "steps": [
                "Review Splunk App Creation guidelines",
                "Follow Splunk Development best practices",
                "Implement Splunk Enterprise Security workflows",
                "Verify against Splunk API documentation",
                "Check Splunk configuration guidelines",
                "Follow Splunk style guide for documentation",
                "Implement Splunk Web customization standards",
                "Review Splunk custom alert action guidelines",
                "Follow Splunk app certification requirements"
            ]
        },
        {
            "name": "Documentation Cross-References",
            "steps": [
                "Cross-reference with Splunk docs",
                "Verify against Splunk Cloud Platform guidelines",
                "Check compatibility with Splunk API",
                "Review Splunk workflow documentation",
                "Validate against Splunk development standards",
                "Ensure compliance with Splunk app requirements",
                "Follow Splunk UI/UX guidelines"
            ]
        },
        {
            "name": "Security Checks",
            "steps": [
                "Review authentication configuration",
                "Verify authorization settings",
                "Check SSL/TLS configurations",
                "Audit API endpoint security",
                "Validate input sanitization",
                "Review custom script security",
                "Check for sensitive data exposure",
                "Verify secure communication channels"
            ]
        },
        {
            "name": "Performance Optimization",
            "steps": [
                "Monitor search performance",
                "Optimize dashboard loading times",
                "Review KV store usage",
                "Check index efficiency",
                "Analyze alert action performance",
                "Optimize JavaScript execution",
                "Monitor memory usage",
                "Review cache effectiveness"
            ]
        },
        {
            "name": "Deployment Checks",
            "steps": [
                "Verify app package structure",
                "Check dependencies",
                "Validate configuration files",
                "Test installation process",
                "Verify upgrade path",
                "Check backward compatibility",
                "Test in distributed environment",
                "Validate cloud deployment"
            ]
        },
        {
            "name": "Testing & Validation via MCP",
            "steps": [
                "ALWAYS use the Splunk MCP server credentials from .vscode/mcp.json for validation",
                "Use the token and endpoint defined in the MCP config for all Splunk test requests",
                "Execute search/validation queries via REST API using the MCP token when full MCP tool access is unavailable"
            ]
        }
    ],
    "guidelines": {
        "documentation": [
            "Use Markdown for documentation and README files",
            "Maintain existing README.md structure"
        ]
    },
