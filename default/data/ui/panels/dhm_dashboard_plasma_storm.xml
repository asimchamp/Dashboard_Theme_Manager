      }

      .btn-secondary:hover {
        background: rgba(157, 0, 255, 0.3) !important;
        border-color: var(--plasma-electric-cyan) !important;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
      }

      /* Links */
      a {
        color: var(--plasma-electric-cyan) !important;
        text-decoration: none !important;
        transition: all 0.2s;
      }

      a:hover {
        color: var(--plasma-electric-magenta) !important;
        text-shadow: 0 0 8px rgba(255, 0, 255, 0.5);
      }

      /* Progress Bars */
      .progress-bar {
        background: var(--plasma-grad-main) !important;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
        animation: progressPulse 2s ease-in-out infinite;
      }

      @keyframes progressPulse {
