<dashboard version="1.1" isDashboard="false" hideEdit="true" hideAppBar="true" script="js/home/home.js,js/common/hide_header.js,js/common/sidebar.js,js/theme_gallery.js" stylesheet="css/home/home.css,css/common/hide_header.css,css/common/sidebar.css" theme="dark">
    <label>Theme Manager</label>
    <description>Manage and apply themes to your Splunk dashboards</description>
    
    <row>
        <panel>
            <html>
                <div class="dashboard-container" id="themeManagerApp">
                    <!-- Sidebar will be injected here by sidebar.js -->

                    <!-- Professional Top Bar -->
                    <div class="tm-top-bar">
                        <div class="tm-top-bar-brand">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="tm-brand-icon">
                                <circle cx="13.5" cy="6.5" r=".5" fill="currentColor"></circle>
                                <circle cx="17.5" cy="10.5" r=".5" fill="currentColor"></circle>
                                <circle cx="8.5" cy="7.5" r=".5" fill="currentColor"></circle>
                                <circle cx="6.5" cy="12.5" r=".5" fill="currentColor"></circle>
                                <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.554C21.965 6.012 17.461 2 12 2z"></path>
                            </svg>
                            <span class="tm-brand-name">Theme Gallery</span>
                        </div>
                        <div class="tm-top-bar-nav">
                            <!-- Dark mode toggle moved to sidebar -->
                        </div>
                    </div>

                    <!-- Main Content -->
                    <main class="tm-main">
                        <!-- Search & Filter Toolbar -->
                        <div class="tm-toolbar">
                            <div class="tm-search-container">
                                <svg class="tm-search-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <path d="m21 21-4.3-4.3"></path>
                                </svg>
                                <input type="text" id="themeSearch" class="tm-search-box" placeholder="Search themes..." />
                            </div>
                            <div class="tm-filter-group">
                                <div class="tm-filter-dropdown">
                                    <button class="tm-filter-btn" id="categoryFilter">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                                        </svg>
                                        <span>Category: <span id="categoryLabel">All</span></span>
                                        <svg class="tm-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="m6 9 6 6 6-6"></path>
                                        </svg>
                                    </button>
                                    <div class="tm-dropdown-menu" id="categoryMenu">
                                        <button class="tm-dropdown-item active" data-category="all">All Themes</button>
                                        <button class="tm-dropdown-item" data-category="professional">Professional</button>
                                        <button class="tm-dropdown-item" data-category="vibrant">Vibrant</button>
                                        <button class="tm-dropdown-item" data-category="modern">Modern</button>
                                        <button class="tm-dropdown-item" data-category="creative">Creative</button>
                                        <button class="tm-dropdown-item" data-category="nature">Nature</button>
                                        <button class="tm-dropdown-item" data-category="technical">Technical</button>
                                        <button class="tm-dropdown-item" data-category="space">Space</button>
                                        <button class="tm-dropdown-item" data-category="presentation">Presentation</button>
                                        <button class="tm-dropdown-item" data-category="hybrid">Hybrid</button>
                                    </div>
                                </div>
                                <div class="tm-filter-dropdown">
                                    <button class="tm-filter-btn" id="modeFilter">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                                        </svg>
                                        <span>Mode: <span id="modeLabel">All</span></span>
                                        <svg class="tm-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="m6 9 6 6 6-6"></path>
                                        </svg>
                                    </button>
                                    <div class="tm-dropdown-menu" id="modeMenu">
                                        <button class="tm-dropdown-item active" data-mode="all">All Modes</button>
                                        <button class="tm-dropdown-item" data-mode="dark">Dark</button>
                                        <button class="tm-dropdown-item" data-mode="light">Light</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Section Header for Themes -->
                        <div class="tm-section-header">
                            <div>
                                <h2 class="tm-section-title">
                                    All Themes 
                                    <span id="theme-count-label" class="tm-badge tm-badge-secondary" style="margin-left: 10px; opacity: 0; transition: opacity 0.5s;">Loading...</span>
                                </h2>
                                <p class="tm-section-description">Browse all available themes</p>
                            </div>
                        </div>

                        <div class="tm-grid" id="theme-gallery-container">
                            <!-- Theme cards will be dynamically generated by theme_gallery.js -->
                        </div>

                        <!-- Shadcn-style Pagination Controls -->
                        <div class="tm-pagination-container">
                            <div class="tm-pagination-left">
                                <span class="tm-pagination-label">Rows per page</span>
                                <div class="tm-select-wrapper">
                                    <select id="rowsPerPage" class="tm-select">
                                        <option value="10">10</option>
                                        <option value="20" selected="selected">20</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                            </div>
                            <div class="tm-pagination-right">
                                <span class="tm-pagination-info" id="paginationInfo">Page 1 of 1</span>
                                <div class="tm-pagination-actions">
                                    <button class="tm-pagination-btn" id="btnFirstPage" aria-label="First Page">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m11 17-5-5 5-5"/><path d="m18 17-5-5 5-5"/></svg>
                                    </button>
                                    <button class="tm-pagination-btn" id="btnPrevPage" aria-label="Previous Page">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
                                    </button>
                                    <button class="tm-pagination-btn" id="btnNextPage" aria-label="Next Page">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
                                    </button>
                                    <button class="tm-pagination-btn" id="btnLastPage" aria-label="Last Page">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m13 17 5-5-5-5"/><path d="m6 17 5-5-5-5"/></svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Include Dynamic Theme Gallery Script -->
                    </main>
                </div>
            </html>
        </panel>
    </row>
</dashboard>